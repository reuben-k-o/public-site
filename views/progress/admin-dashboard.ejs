            </div>
            <div class="col p-3 bg-success">
              <p class="text-center">
                <i class="fa fa-code-fork mx-2 text-secondary"></i>Projects
              </p>
              <p class="projects text-center">4</p>
            </div>
            <div class="col p-3 bg-info">
              <p class="text-center">
                <i class="fa fa-list-ul mx-2 text-secondary"></i> Active tasks
              </p>
              <p class="active__tasks text-center">6</p>
            </div>

            <div class="col p-3 bg-white">
              <p class="text-center">
                <i class="fa fa-clock-o mx-2 text-secondary"></i> Ongoing tasks
              </p>
              <p class="ongoing__tasks text-center">6</p>
            </div>
          </div>
        </div>

        <!--  -->
        <!-- projects setion -->
        <div class="container-fluid px-3">
          <div class="row">
            <!-- progress bar graph -->
            <div class="col bg-white m-3 border">
              <div class="p-2 mb-3 mt-1 text-success text-center">
                completion of tasks
              </div>
              <div class="img-fluid">
                <p>This is a place holder image</p>
                <img src="/images/chart.png" alt="placeholder chart" />
              </div>
            </div>
            <!-- end -->
            <!-- tasks performance -->
            <div class="col bg-white m-3 border p-3">
              <div class="p-2 mb-3 mt-1 text-success text-center">
                Tasks Performance
              </div>
              <p>Assigned</p>
              <div class="progress m-3">
                <div
                  class="progress-bar progress-bar-striped bg-info progress-bar__asigned"
                  role="progressbar"
                  aria-valuenow="70"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="width: 70%"
                >
                  70%
                </div>
              </div>
              <p>Completed</p>
              <div class="progress m-3">
                <div
                  class="progress-bar progress-bar__completed bg-success progress-bar-striped"
                  role="progressbar"
                  aria-valuenow="50"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="width: 50%"
                >
                  50%
                </div>
              </div>

              <p>Active</p>
              <div class="progress m-3">
                <div
                  class="progress-bar progress-bar__active progress-bar-warning progress-bar-striped"
                  role="progressbar"
                  aria-valuenow="60"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="width: 60%"
                >
                  60%
                </div>
              </div>
            </div>
            <!-- end -->

            <!-- leaderboad -->
            <div class="col bg-white m-3 border p-3">
              <p class="mt-1 mb-3 text-success text-center">User progresses</p>
              <div class="users__progresses">
