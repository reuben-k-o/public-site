      <section>
        <!-- teams projects active tasks and ongoing tasks -->
        <div class="container-fluid px-4">
          <div class="row p-1">
            <div class="col p-3 bg-warning">
              <p class="text-center">
                <i class="fa fa-users mx-2 text-secondary"></i>Teams
