      <!-- active projects and TODos -->
      <section>
        <div class="container-fluid">
          <div class="row p-2">
            <div class="col bg-white mx-3 p-2 active__projects">
              <div class="h4 text-center">Active Projects</div>
              <ul style="list-style: none" class="p-2 projects__container"></ul>
            </div>

            <div class="col bg-white mx-3 p-2">
              <div class="h4 text-center">Active Tasks: TODOs</div>
